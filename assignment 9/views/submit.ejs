<%- include('partials/header') %>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 text-center" style="width: 100%; max-width: 500px; border-radius: 10px;">
        <i class="fas fa-key fa-4x text-dark mb-3"></i>
        <h2 class="mb-3">Share Your Secret</h2>
        <p class="text-muted">Don't keep your secrets, share them anonymously.</p>

        <form action="/submit" method="POST">
            <div class="form-group">
                <input type="text" class="form-control text-center" name="secret" placeholder="What's your secret?" required>
            </div>
            <button type="submit" class="btn btn-dark btn-block mt-3">Submit</button>
        </form>
    </div>
</div>

